{
  "name": "@codrjs/core",
  "version": "1.0.0",
  "description": "An open-sourced customizable annotation tool",
  "main": "index.js",
  "repository": "git@github.com:CodrJS/Core.git",
  "author": "Dylan Bulmer <dylan@dylanbulmer.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "jest --config jest.config.json --passWithNoTests --coverage",
    "build": "yarn clean && swc src -d lib && tsc && cp package.json lib/",
    "clean": "rm -rf ./lib",
    "format": "prettier --write \"src/**/*.(ts|js)\"",
    "lint": "eslint -c .eslintrc.json --ignore-path .eslintignore --ext .ts src",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.3",
    "@swc/jest": "^0.2.22",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.21",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "dotenv": "^16.0.2",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.0.4",
    "jest": "^29.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.8.3"
  }
}
